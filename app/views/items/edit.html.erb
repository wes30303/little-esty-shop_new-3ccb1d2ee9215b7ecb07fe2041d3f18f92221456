<h1>Update Item Information</h1>
<section>
  <%= form_with url: "/merchants/#{@item.merchant_id}/items/#{@item.id}", method: :patch, local: true do |f| %>
    <p id="item-name">
      <%= f.label :name %>
      <%= f.text_field :name, value: "#{@item.name}" %>
    </p>
    <p id="item-description">
      <%= f.label :description %>
      <%= f.text_field :description, value: "#{@item.description}" %>
    </p>
    <p id="item-price">
      <%= f.label :unit_price, "Unit Price ($)" %>
      <%= f.number_field :unit_price, value: "#{@item.unit_price}" %>
    </p>
    <%= f.submit %>
  <% end %>
</section>